<launch>
    <arg name="configuration_path" default="$(find odas_ros)/config/configuration.cfg"/>

    <node pkg="odas_ros" type="odas_core_node" name="odas_core_node">
        <param name="configuration_path" value="$(arg configuration_path)"/>
    </node>

    <node pkg="odas_ros" type="odas_server_node.py" name="odas_server_node" output="screen">
        <param name="configuration_path" value="$(arg configuration_path)"/>
        <param name="ssl_frame_id" value="odas"/>
        <param name="sst_frame_id" value="odas"/>

        <remap from="sss" to="audio_signed_16_44100"/>
        <remap from="ssl" to="audio_potential_sources"/>
        <remap from="sst" to="audio_tracked_sources"/>
    </node>
</launch>
